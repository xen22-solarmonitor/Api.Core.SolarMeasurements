{
  "openapi": "3.0.1",
  "info": {
    "title": "SolarMeasurements Core API",
    "description": "A simple API for retrieving measurements from Solar sites",
    "license": {
      "name": "Licensed under MIT Licence",
      "url": "http://opensource.org/licenses/MIT"
    },
    "version": "1.0"
  },
  "paths": {
    "/api/v{version}/SolarMeasurements": {
      "get": {
        "tags": [
          "SolarMeasurements"
        ],
        "parameters": [
          {
            "name": "startTime3",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "endTime",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "granularity",
            "in": "query",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Granularity"
            }
          },
          {
            "name": "version",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Measurement"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v{version}/SolarMeasurements/{timestamp}": {
      "get": {
        "tags": [
          "SolarMeasurements"
        ],
        "parameters": [
          {
            "name": "timestamp",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "version",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Measurement"
                }
              }
            }
          }
        }
      }
    },
    "/api/Version": {
      "get": {
        "tags": [
          "Version"
        ],
        "summary": "Returns version information about this service",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VersionDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Granularity": {
        "enum": [
          "hourly",
          "daily",
          "weekly",
          "monthly"
        ],
        "type": "string"
      },
      "Measurement": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "sensorId": {
            "type": "integer",
            "format": "int32"
          },
          "value": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "VersionDto": {
        "type": "object",
        "properties": {
          "apiVersions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "assemblyVersion": {
            "type": "string",
            "nullable": true
          },
          "fullVersion": {
            "type": "string",
            "nullable": true
          },
          "commitSha": {
            "type": "string",
            "nullable": true
          },
          "commitBranch": {
            "type": "string",
            "nullable": true
          },
          "buildTime": {
            "type": "string",
            "nullable": true
          },
          "buildConfiguration": {
            "type": "string",
            "nullable": true
          }
        }
      }
    }
  }
}
