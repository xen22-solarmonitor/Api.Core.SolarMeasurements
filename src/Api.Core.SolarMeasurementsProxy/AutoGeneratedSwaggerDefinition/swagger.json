{
  "openapi": "3.0.1",
  "info": {
    "title": "SolarMeasurements Core API",
    "description": "A simple API for retrieving measurements from Solar sites",
    "license": {
      "name": "Licensed under MIT Licence",
      "url": "http://opensource.org/licenses/MIT"
    },
    "version": "1.0"
  },
  "paths": {
    "/api/v1.0/SolarMeasurements": {
      "get": {
        "tags": [
          "SolarMeasurements"
        ],
        "parameters": [
          {
            "name": "startTime3",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time",
              "default": ""
            }
          },
          {
            "name": "endTime",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time",
              "default": ""
            }
          },
          {
            "name": "granularity",
            "in": "query",
            "required": true,
            "schema": {
              "enum": [
                "hourly",
                "daily",
                "weekly",
                "monthly"
              ],
              "type": "string",
              "default": ""
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Measurement"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1.0/SolarMeasurements/{timestamp}": {
      "get": {
        "tags": [
          "SolarMeasurements"
        ],
        "parameters": [
          {
            "name": "timestamp",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time",
              "default": ""
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Measurement"
                }
              }
            }
          }
        }
      }
    },
    "/api/Version": {
      "get": {
        "tags": [
          "Version"
        ],
        "summary": "Returns version information about this service",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VersionDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Measurement": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "sensorId": {
            "type": "integer",
            "format": "int32"
          },
          "value": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "VersionDto": {
        "type": "object",
        "properties": {
          "apiVersion": {
            "type": "string"
          },
          "assemblyVersion": {
            "type": "string"
          },
          "fullVersion": {
            "type": "string"
          },
          "commitSha": {
            "type": "string"
          },
          "commitBranch": {
            "type": "string"
          },
          "buildTime": {
            "type": "string"
          },
          "buildConfiguration": {
            "type": "string"
          }
        }
      }
    }
  }
}
